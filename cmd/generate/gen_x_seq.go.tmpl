func (s *{{.Name}}Seq) MValue(v {{.Type}}) {{.Name}}s {
	s.buildIndex()
	index := s.valueIndex[v]
	if len(index) == 0 {
		return nil
	}
	ret := make({{.Name}}s, len(index))
	for i, v := range index {
		ret[i] = s.slice[v]
	}
